                            <div class="u-container-layout u-similar-container u-valign-top u-container-layout-1"><!--product_image-->
                                <img alt="" class="u-expanded-width u-image u-image-default u-product-control u-image-1" src="{{ books1[index].getCoverPath }}"><!--/product_image--><!--product_title-->
