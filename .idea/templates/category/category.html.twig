            <div class="u-clearfix u-sheet u-valign-middle u-sheet-1"><!--products--><!--products_options_json--><!--{"type":"Recent","source":"","tags":"","count":4}--><!--/products_options_json-->
                <div class="u-expanded-width u-products u-repeater u-repeater-1"><!--product_item-->

                    {% if books1[index] is defined and books1[index] is not null  %}
